# EFKA 知了 v3.0 - Backend Dockerfile
# FastAPI 后端服务镜像

FROM python:3.12-slim

# 设置工作目录
WORKDIR /app

# 安装系统依赖
RUN set -eux; \
    printf '%s\n' \
      'Acquire::Retries "5";' \
      'Acquire::http::Timeout "30";' \
      'Acquire::https::Timeout "30";' \
      > /etc/apt/apt.conf.d/80-retries; \
    apt-get update; \
    apt-get install -y --no-install-recommends \
    gcc \
    libffi-dev \
    curl \
    pandoc \
    nodejs \
    npm \
    && rm -rf /var/lib/apt/lists/*

# 安装 Claude Code CLI（claude_agent_sdk 默认通过它执行）
RUN npm install -g @anthropic-ai/claude-code

# 复制依赖文件
COPY backend/requirements.txt .

# 安装 Python 依赖
RUN pip install --no-cache-dir -r requirements.txt

# 复制应用代码
COPY backend/ ./backend/
COPY knowledge_base/ ./knowledge_base/
COPY skills/ ./skills/

# 创建日志目录和技能目录
RUN mkdir -p /app/logs /app/knowledge_base/.claude && \
    cp -r /app/skills /app/knowledge_base/.claude/skills

# 设置环境变量
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Run mode argument (standalone/wework/feishu/dingtalk/slack)
ARG RUN_MODE=standalone
ENV RUN_MODE=${RUN_MODE}

# 暴露端口
EXPOSE 8000

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# 启动命令 (use backend.main with --mode for run mode support, consistent with scripts/start.sh)
CMD ["python", "-m", "backend.main"]
