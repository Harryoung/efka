# EFKA 知了 v3.0 - WeWork Callback Service Dockerfile
# Flask WeWork 回调服务镜像

FROM python:3.12-slim

# 设置工作目录
WORKDIR /app

# 安装系统依赖
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    libffi-dev \
    curl \
    nodejs \
    npm \
    && rm -rf /var/lib/apt/lists/*

# 安装 Claude Code CLI（claude_agent_sdk 默认通过它执行）
RUN npm install -g @anthropic-ai/claude-code

# 复制依赖文件
COPY backend/requirements.txt .

# 安装 Python 依赖
RUN pip install --no-cache-dir -r requirements.txt

# 复制应用代码
COPY backend/ ./backend/
COPY knowledge_base/ ./knowledge_base/
COPY skills/ ./skills/

# 创建日志目录和技能目录
RUN mkdir -p /app/logs /app/knowledge_base/.claude && \
    cp -r /app/skills /app/knowledge_base/.claude/skills

# 设置环境变量
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# 暴露端口
EXPOSE 8081

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8081/health || exit 1

# 启动命令
CMD ["python", "-m", "backend.channels.wework.server"]
