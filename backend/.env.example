# Claude API 认证配置（选择其中一种方式）
# 方式1: 使用标准 Claude API Key
CLAUDE_API_KEY=your_claude_api_key_here

# 方式2: 使用 Anthropic Auth Token (适用于代理或自定义认证)
# ANTHROPIC_AUTH_TOKEN=your_auth_token_here
# ANTHROPIC_BASE_URL=https://your-proxy-url.com

# 知识库根目录路径
KB_ROOT_PATH=../knowledge_base

# 服务器配置
HOST=127.0.0.1
PORT=8000

# 日志级别
LOG_LEVEL=INFO

# 调试模式
DEBUG=false

# CORS 允许的来源（逗号分隔）
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# 文件上传限制（字节）
MAX_UPLOAD_SIZE=52428800

# 会话超时时间（秒）
SESSION_TIMEOUT=1800

# FAQ 最大条目数
FAQ_MAX_ENTRIES=100

# 小文件阈值（KB）
SMALL_FILE_KB_THRESHOLD=30
